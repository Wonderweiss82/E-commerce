<Window x:Class="E_commerce.Views.BestellingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bestelling Toevoegen" Height="350" Width="500">
    <Grid Background="#F0F8FF">
        <Label Content="Bestelling Datum:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <DatePicker Name="DatePickerDatum" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,10,0,0"/>

        <Label Content="Klant ID:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox Name="TxtKlantId" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,50,0,0"/>

        <Label Content="Geselecteerd Product:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <ComboBox Name="cmbProducten" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,90,0,0"
                  DisplayMemberPath="Naam"/>

        <!-- Button with enhanced design -->
        <Button Content="Bestelling Toevoegen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="10,130,0,0"
                Background="#007FFF" Foreground="White" BorderBrush="#007FFF" BorderThickness="2" Click="BtnBestellingToevoegen_Click"/>
    </Grid>
</Window>